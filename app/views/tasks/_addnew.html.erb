<%= form_for :task, url: tasks_path do |f|  %>
  <h3>Add new</h3>
  <ul class="list-group">
    <li class="list-group-item">
      <div class="row">
        <div class="col-lg-2">
          <strong>Status</strong>
        </div>
        <div class="col-lg-4">
          <strong>Title</strong>
        </div>
        <div class="col-lg-4">
          <strong>Deadline</strong>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col-lg-2">
          <%= f.collection_select :task_type_id, TaskType.all, :id, :title, :include_blank => false %>
        </div>
        <div class="col-lg-4">
          <%= f.text_field :title %>
        </div>
        <div class="col-lg-3">
          <%= f.date_select :deadline %>
        </div>
        <div class="col-lg-3">
          <%= f.submit %>
        </div>
      </div>
    </li>
  </ul>
<% end %>